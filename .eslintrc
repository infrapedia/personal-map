{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "semi": "off",
    "quotes": ["error", "single"]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./config/webpack.dev.babel.js"
      }
    }
  }
}
